{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}",
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"name": "Attach",
			"port": 9229,
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"type": "node-terminal",
			"name": "Run Script: startMcpInspector",
			"request": "launch",
			"command": "npm run startMcpInspector",
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "node-terminal",
			"name": "Run Script: publish",
			"request": "launch",
			"command": "npm run publish",
			"cwd": "${workspaceFolder}"
		}
	]
}